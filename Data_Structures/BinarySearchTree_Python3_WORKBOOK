        "\n",
        "        4\n",
        "      /    \\\n",
        "    2        5\n",
        "   / \\\n",
        "  1   3\n",
        "'''    \n",
        "\n",
        "root = Node(4) \n",
        "insertIntoBst(root, Node(5))\n",
        "insertIntoBst(root, Node(2)) \n",
        "insertIntoBst(root, Node(1)) \n",
        "insertIntoBst(root, Node(3))"
      ],
